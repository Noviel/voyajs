{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",

    "lib": ["webworker", "dom", "es2016"],
    
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,

    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true
  },
  "exclude": ["node_modules", "**/__tests__/*"]
}