{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,

    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__tests__/*", "*.test.ts"]
}